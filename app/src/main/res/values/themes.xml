<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TodoList3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/neon_pink_light</item>
        <item name="colorPrimaryVariant">@color/neon_pink_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/neon_pink_light</item>
        <item name="colorSecondaryVariant">@color/neon_pink_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Theme.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="Theme.Popup" parent="Theme.AppCompat.Light">
        <item name="android:itemBackground">@color/neon_blue_transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

</resources>