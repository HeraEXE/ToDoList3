<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_item_task"
    android:layout_margin="8dp">

    <CheckBox
        android:id="@+id/check_box_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:buttonTint="@color/crimson_ua"/>

    <TextView
        android:id="@+id/tv_name_task"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        tools:text="Task name"
        android:textColor="@color/dark_grey"
        app:layout_constraintBottom_toBottomOf="@+id/check_box_task"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/check_box_task"
        app:layout_constraintTop_toTopOf="@+id/check_box_task" />

    <TextView
        android:id="@+id/tv_date_task"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textColor="@color/crimson_ua"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_name_task"
        app:layout_constraintStart_toEndOf="@+id/check_box_task"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_task"
        tools:text="Date" />
</androidx.constraintlayout.widget.ConstraintLayout>