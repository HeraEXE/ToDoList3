<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_item_task"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_task"
    android:padding="6dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    android:foreground="@drawable/ripple_item_task">

    <CheckBox
        android:id="@+id/check_box_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:buttonTint="@color/white_transparent"/>

    <TextView
        android:id="@+id/tv_name_task"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="sans-serif-black"
        android:lines="1"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/check_box_task"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/check_box_task"
        app:layout_constraintTop_toTopOf="@+id/check_box_task"
        tools:text="Task nameeeeeeeeeeeeeeeeeeeeeeeeeeeee" />

    <TextView
        android:id="@+id/tv_date_task"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textColor="@color/white_transparent"
        android:fontFamily="sans-serif-black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_name_task"
        app:layout_constraintStart_toEndOf="@+id/check_box_task"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_task"
        tools:text="Date" />
</androidx.constraintlayout.widget.ConstraintLayout>